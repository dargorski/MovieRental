@model MovieRental.Models.Movie
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    @if (Model.ReleaseDate.HasValue)
    {
        <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    }
    @if (Model.AddToStockDate.HasValue)
    {
        <li>Add Date: @Model.AddToStockDate.Value.ToLongDateString() </li>
    }
    
    <li>Number in stock: @Model.NumberInStock</li>
   
</ul>
